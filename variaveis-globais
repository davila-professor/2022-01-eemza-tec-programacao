	}


	// Função que realiza um cálculo e retorna o resultado
	funcao real calcula (real a, real b )
	{
	    //Variável de escopo local à função 'calcula'
		real resultado
		
		resultado = Mglobal2 / b
		
		//resultado = a / b
		
